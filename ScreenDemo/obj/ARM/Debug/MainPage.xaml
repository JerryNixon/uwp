<Page
    x:Class="ScreenDemo.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ScreenDemo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:ConnectionId='1' x:Name="LayoutRoot" Background="White" >
        <StackPanel>

            <TextBlock x:ConnectionId='2' Name="lblMsg" TextWrapping="Wrap" />

            <Button x:ConnectionId='3' Name="btnGotoLockScreen" Content="跳转到锁屏设置界面"                                 />

            <Button x:ConnectionId='4' Name="btnSendMessageToLockScreen" Content="发送信息到锁屏"                                          />

            <Button x:ConnectionId='5' Name="btnLockScreenBackground" Content="修改锁屏背景"                                       />

        </StackPanel>
    </Grid>

</Page>

